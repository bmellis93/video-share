generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model ShareLink {
  id             String    @id @default(cuid())
  token          String    @unique
  videoId        String
  createdAt      DateTime  @default(now())
  expiresAt      DateTime?
  allowComments  Boolean   @default(true)
  allowDownload  Boolean   @default(false)
  contactId      String?
  conversationId String?
}

enum CommentRole {
  OWNER
  CLIENT
}

model Comment {
  id String @id @default(cuid())

  token      String // share token used (fast auth + scoping)
  videoId    String
  timecodeMs Int // for top-level comments; replies can reuse parent time or be 0
  body       String
  author     String?
  role       CommentRole @default(CLIENT)
  createdAt  DateTime    @default(now())

  parentId String?
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  Comment[] @relation("CommentReplies")

  // Keep these from your current model (they matter)
  @@index([token, createdAt])
  @@index([videoId])
  @@index([videoId, timecodeMs])
  @@index([parentId, createdAt])
}
